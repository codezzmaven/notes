<p id="notice"><%= notice %></p>

<h1>Listing Notes</h1>

<table>
  <thead>
    <tr>
      <th>Titel</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bundles.each do |bundle| %>
      <% bundle.notes.each do |note| %>
        <tr>
          <td><%= note.titel %></td>
          <td><%= note.description %></td>
          <td><%= note.user.email %></td>
          <td><%= link_to 'Show', note %></td>
          <% if can? :crud, bundle %>
            <td><%= link_to 'Edit', edit_bundle_path(bundle) %></td>
            <td><%= link_to 'Destroy', bundle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bundle', new_bundle_path %>
